<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiplomProject1.MainPage">

    <StackLayout Padding="15, 15, 15, 15" VerticalOptions="Center" HorizontalOptions="Center">
        
        <Label Text="Логин" FontSize="30" FontFamily="Arial" HorizontalTextAlignment="Center"></Label>
        <Entry x:Name="UserLog" Keyboard="Telephone" BackgroundColor="Black" TextColor="White"></Entry>

        <Label Text="Пароль" FontSize="30" FontFamily="Arial" HorizontalTextAlignment="Center"></Label>
        <Entry IsPassword="True" x:Name="UserPass" Keyboard="Text" BackgroundColor="Black" TextColor="White"></Entry>

        <Button Text="Вход" x:Name="BtnEntry"></Button>

    </StackLayout>

</ContentPage>
